{
  "compilerOptions": {
    "outDir": "dist",
    "module": "es2020",
    "target": "es2020",
    "moduleResolution": "node",
    "declaration": true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "rootDir": "src"
  },
  "include": [
    "src"
  ],
  "exclude": ["node_modules", "dist", "public"]
}
